{
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 2
    },
    "configurePresets": [
        {
            "name": "ninja",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-${presetName}"
        },
        {
            "name": "gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "asan",
            "hidden": true,
            "environment": {
                "CMAKE_ENV": "ASAN"
            }
        },
        {
            "name": "ubsan",
            "hidden": true,
            "environment": {
                "CMAKE_ENV": "UBSAN"
            }
        },
        {
            "name": "gcc-debug",
            "inherits": [
                "ninja",
                "gcc",
                "debug"
            ],
            "displayName": "GCC Debug",
            "description": "GCC Debug"
        },
        {
            "name": "gcc-debug-asan",
            "inherits": [
                "gcc-debug",
                "asan"
            ],
            "displayName": "GCC Debug ASAN",
            "description": "GCC Debug ASAN"
        },
        {
            "name": "gcc-debug-ubsan",
            "inherits": [
                "gcc-debug",
                "ubsan"
            ],
            "displayName": "GCC Debug UBSAN",
            "description": "GCC Debug UBSAN"
        },
        {
            "name": "gcc-release",
            "inherits": [
                "ninja",
                "gcc",
                "release"
            ],
            "displayName": "GCC Release",
            "description": "GCC Release"
        },
        {
            "name": "gcc-release-asan",
            "inherits": [
                "gcc-release",
                "asan"
            ],
            "displayName": "GCC Release ASAN",
            "description": "GCC Release ASAN"
        },
        {
            "name": "gcc-release-ubsan",
            "inherits": [
                "gcc-release",
                "ubsan"
            ],
            "displayName": "GCC Release UBSAN",
            "description": "GCC Release UBSAN"
        }
    ]
}